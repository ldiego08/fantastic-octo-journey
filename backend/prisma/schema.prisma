generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id    Int    @id @default(autoincrement())
  name  String
  depth Int

  parentId Int?
  parent   Board?  @relation("BoardHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children Board[] @relation("BoardHierarchy")
}
